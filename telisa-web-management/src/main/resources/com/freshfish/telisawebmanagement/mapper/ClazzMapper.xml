<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.freshfish.telisawebmanagement.mapper.ClazzMapper">
    <insert id="insert">
        insert into clazz(name,room,begin_date,end_date,master_id,subject,create_time,update_time)
        values(#{name},#{room},#{beginDate},#{endDate},#{masterId},#{subject},#{createTime},#{updateTime})
    </insert>
    <update id="updateById">
        update clazz
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="room != null and room != ''">
                room = #{room},
            </if>
            <if test="beginDate != null">
                begin_date = #{beginDate},
            </if>
            <if test="endDate != null">
                end_date = #{endDate},
            </if>
            <if test="masterId != null">
                master_id = #{masterId},
            </if>
            <if test="subject != null and subject != ''">
                subject = #{subject},
            </if>
            update_time = #{updateTime}
        </set>
        where id=#{id}
    </update>

    <delete id="deleteById">
        delete from clazz where id=#{id}
    </delete>


    <select id="getTotal" resultType="java.lang.Long">
        select count(*) from clazz
    </select>
<select id="getList" resultType="com.freshfish.telisawebmanagement.entity.Clazz">
    SELECT
    c.*,e.name as master_name  <!-- 建议显式列出字段，避免*带来的性能/字段冗余问题 -->
    FROM
    clazz c
    LEFT JOIN
    emp e ON c.master_id = e.id
    WHERE 1=1  <!-- 固定WHERE 1=1，方便拼接AND条件 -->
    <!-- 动态筛选名称（模糊匹配，如需精确匹配可改为=） -->
    <if test="name != null and name != ''">
        AND c.name LIKE CONCAT('%', #{name}, '%')
    </if>
    <!-- 动态筛选开始时间（大于等于） -->
    <if test="begin != null">
        AND c.create_time &gt;= #{begin}  <!-- XML中>需转义为&gt; -->
    </if>
    <!-- 动态筛选结束时间（小于等于） -->
    <if test="end != null">
        AND c.create_time &lt;= #{end}  <!-- XML中<需转义为&lt; -->
    </if>
    <!-- 分页：MySQL的LIMIT 偏移量, 条数 -->
    LIMIT #{start}, #{pageSize}
</select>
    <select id="getById" resultType="com.freshfish.telisawebmanagement.entity.Clazz">
        SELECT
        c.*,e.name as master_name  <!-- 建议显式列出字段，避免*带来的性能/字段冗余问题 -->
        FROM
        clazz c
        LEFT JOIN
        emp e ON c.master_id = e.id
        where c.id=#{id}
    </select>
    <select id="list" resultType="com.freshfish.telisawebmanagement.entity.Clazz">
        select * from clazz
    </select>

</mapper>